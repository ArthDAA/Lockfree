{
	"manifest_version": 3,
	"name": "AccentFlow",
	"version": "0.2.0",
	"description": "Syst√®me d'accents cycliques universel - Alt + lettre pour accents",
	"permissions": ["activeTab"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
} 